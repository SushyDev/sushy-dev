---
import '@/styles/main.scss';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={ Astro.generator } />
	<script>import '@/plugins/webgl-background'</script>
	<title>{ title }</title>
    </head>

    <body class="flex flex-col bg-transparent">
	<slot />

	<footer class="container mx-auto mt-auto p-6 mix-blend-difference">
	    <p class="text-gray-300 text-center">Copyright Â© 2023 - Sushy</p>
	</footer>
	<canvas id="background"></canvas>
    </body>
</html>

<style lang="scss">
    @keyframes fade-in {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;	
        }
    }

    canvas {
        opacity: 0;
        position: fixed;
        z-index: -1;
        width: 100%;
        height: 100%;
    }

    canvas.drawing {
        opacity: 1;
        animation: fade-in 1s ease-in;
    }
</style>
